{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "main-capability",
  "description": "Capability for the main window with filesystem and dialog access",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-execute",
    "dialog:default",
    "fs:allow-write-text-file",
    "fs:allow-write-file",
    "fs:allow-create",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "$DOWNLOAD" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DOCUMENT" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DESKTOP" },
        { "path": "$DESKTOP/**" },
        { "path": "$HOME" },
        { "path": "$HOME/**" }
      ]
    }
  ]
}